<div class="main-container">
  <% @baskets.each do |basket| %>
    <h1>transaction #<%= @basket.id %> <small><span class="badge badge-primary"><%= basket.status %></span></small></h1>
    <ul class="list-unstyled">
      <li><strong>ISSUED ON</strong> <%= basket.created_at.to_date %></li>
      <li><strong>TOTAL</strong> <%= humanized_money_with_symbol basket.total %></li>
    </ul>
    <%= render "payments/table", basket: basket %>
  <% end %>
</div>
