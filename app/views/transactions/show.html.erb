<div class="container">
  <div class="row py-4">
    <div class="col-md-3">
      <% @transaction.clothe.photos.each do |photo| %>
        <%= cl_image_tag photo.key, width: '100%' %></div>
      <% end %>
    </div>
    <div class="col">
      <h1>transaction #<%= @transaction.id %> <small><span class="badge badge-primary"><%= @transaction.status %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @transaction.created_at.to_date %></li>
        <li><strong>clothe</strong> <%= @transaction.clothe.name %> [<%= @transaction.clothe_sku %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @transaction.total %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>
