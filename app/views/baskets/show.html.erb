<div class="main-container">
  <h1>transaction #<%= @basket.id %> <small><span class="badge badge-primary"><%= @basket.status %></span></small></h1>
  <ul class="list-unstyled">
    <li><strong>ISSUED ON</strong> <%= @basket.created_at.to_date %></li>
    <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @basket.total %></li>
    </li>
  </ul>
  <p>Estimated delivery in <strong>2 business days</strong></p>
  <div class="c-cards">
    <% @basket.transactions.each do |transaction| %>
      <div class="c-card">
        <% transaction.clothe.photos.each do |photo| %>
          <%= cl_image_tag photo.key, class: 'card-img' %>
        <% end %>
        <div class="card-title">
          <%= transaction.clothe.name %>
        </div>
        <div class="card-description">
          <p><%= transaction.clothe.description.capitalize %></p>
          <p><%= humanized_money_with_symbol(transaction.clothe.price) %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>


