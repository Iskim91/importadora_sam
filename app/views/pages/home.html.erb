<div class="main-container">
  <h2 class="text-center">NEW ARRIVALS</h2>
  <div class="c-cards">
    <% @clothes.each do |clothe| %>
      <%= link_to clothe_path(clothe) do  %>
        <div class="c-card">
          <% clothe.photos.each do |photo| %>
            <%= cl_image_tag photo.key, class: 'card-img' %>
          <% end %>
          <div class="card-title">
            <%= clothe.name %>
          </div>
          <div class="card-description">
            <p><%= clothe.description.capitalize %></p>
            <p><%= humanized_money_with_symbol(clothe.price) %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
