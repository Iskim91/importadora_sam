<%= simple_form_for @clothe, class: "transaction-form" do |f| %>
  <%= f.input :name %>
  <%= f.input :sku %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :gender, collection: Clothe::GENDER %>
  <%= f.input :category, collection: Clothe::CATEGORY %>
  <%= f.association :colors, :label_method => lambda { |color|  "##{color.hex} - #{color.name}" }%>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit class: "main-button" %>
<% end %>


