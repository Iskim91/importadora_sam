<div class="main-container">
  <div class="transation-body">
    <% @clothe.photos.each do |photo| %>
      <%= cl_image_tag photo.key, class: "show-img" %>
    <% end %>
    <div class="transaction-info">
      <%= @clothe.name %> <br>
      <%= @clothe.description %> <br>
      <%= @clothe.category %> <br>
      <%= humanized_money_with_symbol(@clothe.price) %>

      <%#= simple_form_for [@clothe, @transaction], method: :get, url: confirmation_clothe_transaction_path([@clothe, @transaction]) do |f| %>
      <%= simple_form_for [ @basket, @transaction] do |f| %>
        <%= f.input :size, collection: Transaction::SIZE %>
        <%= f.input :quantity %>
        <%= f.input :color %>
        <%= f.hidden_field :clothe_id, value: @clothe.id %>
        <%= f.submit "Add to Basket"%>
        <%= f.submit "Checkout", formaction: clothe_transactions_path(@clothe) %>
      <% end %>
      <%#= link_to "Checkout", payment_basket_path(@basket)%>
    </div>
  </div>
</div>
